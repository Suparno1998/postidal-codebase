<h1>Create Categories</h1>

	<div class="row">
	  <div class="col-md-4">
		<form class="form" action="/admin/categories/create" method="post">
		  <div class="form-group">
			<label for="name">Name</label>
			<input type="text" name="name" placeholder="category name" class="form-control"/>
		  </div>
		  <button type="submit" class="btn btn-dark">Add Category</button>
		</form>
	  </div>
	</div>
									<hr>

	<h1>Categories</h1>
		<table class="table">
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th>Date</th>
			</tr>

			{{#each categories}}
			<tr>
				<td>{{id}}</td>
				<td>{{name}}</td>
				<td>{{generateTime date 'MMMM Do YYYY'}}</td>
				<td><a href="/admin/categories/edit/{{id}}" class="btn btn-info">Edit</a></td>
				<td>
					<form action="/admin/categories/{{id}}?_method=DELETE" method="post">
						<button class="btn btn-danger" type="submit">Delete</button>
					</form>
				</td>
			</tr>
			{{/each}}
		</table>
	


