<h2 class="text-center my-4">Edit Category</h2>

<form class="form" action="/admin/categories/edit/{{categories._id}}?_method=PUT" method="post">
  <div class="form-group">
	<label for="name">Name</label>
	<input type="text" name="name" value="{{categories.name}}" placeholder="category name" class="form-control" required/>
  </div>
  <button type="submit" class="btn btn-info">Update Category</button>
</form>