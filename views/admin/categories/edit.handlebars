<h1>Edit Category</h1>

<form class="form" action="/admin/categories/edit/{{categories.id}}?_method=PUT" method="post">
  <div class="form-group">
	<label for="name">Name</label>
	<input type="text" name="name" value="{{categories.name}}" placeholder="category name" class="form-control"/>
  </div>
  <button type="submit" class="btn btn-dark">Update Category</button>
</form>