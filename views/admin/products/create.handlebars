<style>
  .tox-tinymce{
    height:20rem !important;
  }
</style>
<h2 class="text-center my-2">Add Product</h2>
<form action="/admin/posts/create" method="post" enctype="multipart/form-data" >

      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control" id="name" placeholder="Enter Name" required>
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        <textarea name="description" cols="30" rows="3" placeholder="Enter Description" id="description" class="form-control" required></textarea>
      </div>

      <div class="form-group">
        <label for="specification">Specifications</label>
        <div class="row">
          <div class="col-md-2">
            <input type="text" class="form-control" placeholder="key">
          </div>
          <div class="col-md-8">
            <input type="text" class="form-control" placeholder="Value">
          </div>
          <div class="col-md-2" style="margin-top:0.6%;cursor:pointer;">
            <i class="fa fa-plus fa-2x"></i>
          </div>
        </div>
      </div>

      <div class="form-group">
        <label for="category">Category</label>
        <select class="form-control" name="category" id="category" required>
        {{#each categories}}
          <option value="{{id}}">{{name}}</option>
        {{/each}}
        </select>
      </div>

      <div class="form-group">
        <label for="subcategory">Sub Category</label>
        <select class="form-control" name="subcategory" id="subcategory" required>
        {{#each categories}}
          <option value="{{id}}">{{name}}</option>
        {{/each}}
        </select>
      </div>

			<div class="form-group">
        <label for="file">Upload Images</label>
        <input type="file" name="file" class="form-control" multiple required>
      </div>

      <div class="form-group">
        <label for="vendor">Vendor</label>
        <input type="text" vendor="vendor" class="form-control" id="vendor" placeholder="Enter Vendor" required>
      </div>

      <div class="form-group">
        <label for="status">Status</label>
        <select class="form-control" name="status" id="status" required>
          <option value="publish">Publish</option>
          <option value="draft">Draft</option>
        </select>
      </div>

			<button type="submit" class="btn btn-info btn-block">Save</button>
</form>