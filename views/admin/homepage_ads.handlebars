            <div class="col-md-6">
                <a href="{{homepage.android_app}}" target="_blank"><img src="{{homepage.android_app}}" alt="image" width="100px" height="100px"></a>
            </div>
       </div>

        <button type="submit" class="btn btn-info">Save</button>

    </form>
</div>