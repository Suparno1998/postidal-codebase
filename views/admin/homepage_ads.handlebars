            <div class="col-md-6">
                <a href="{{homepage.mid_page_ad_1}}" target="_blank"><img src="{{homepage.mid_page_ad_1}}" alt="image" width="100px" height="100px"></a>
            </div>
       </div>
       <div class="form-group row">
           <div class="col-md-6">
               <label for="mid_page_ad_2">Mid Page Ad 2 (Recommended 381*280)</label>
               <input type="file" name="mid_page_ad_2" class="form-control">
