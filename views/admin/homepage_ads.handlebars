<div class="row">
    <form action="/admin/save_ads" method="post" enctype="multipart/form-data" style="width:100%;">

        <div class="form-group row">
            <div class="col-md-6">
                <label for="carousel_images">Carousel Images (Recommended 783*280)</label>
                <input type="file" name="carousel_images" class="form-control" multiple>
            </div>
            <div class="col-md-6">
                {{#each homepage.carousel_images}}
                <a href="{{.}}" target="_blank"><img src="{{.}}" alt="image" width="100px" height="100px"></a>
                {{/each}}
            </div>   
       </div>

       <div class="form-group row">
            <div class="col-md-6">
                <label for="top_side_ad_1">Top Side Ad 1 (Recommended 390*200)</label>
                <input type="file" name="top_side_ad_1" class="form-control">
            </div>
            <div class="col-md-6">
                <a href="{{homepage.top_side_ad_1}}" target="_blank"><img src="{{homepage.top_side_ad_1}}" alt="image" width="100px" height="100px"></a>
            </div>
       </div>
       <div class="form-group row">
           <div class="col-md-6">
               <label for="top_side_ad_2">Top Side Ad 2 ((Recommended 390*200))</label>
               <input type="file" name="top_side_ad_2" class="form-control">
            </div>
            <div class="col-md-6">
                <a href="{{homepage.top_side_ad_2}}" target="_blank"><img src="{{homepage.top_side_ad_2}}" alt="image" width="100px" height="100px"></a>
            </div>
       </div>

       <div class="form-group row">
           <div class="col-md-6">
               <label for="mid_page_ad_1">Mid Page Ad 1 (Recommended 381*280)</label>
               <input type="file" name="mid_page_ad_1" class="form-control">
